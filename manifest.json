{
    "manifest_version": 3,
    "name": "SafeSurfers: AI Security Sentinel",
    "version": "1.0",
    "description": "A behavioral anomaly detection system for Chrome extensions and web scripts.",
    
    // --- CORE EXTENSION SETUP ---
    "action": {
        "default_popup": "popup.html",
        "default_icon": "assets/icon.png",
        "default_title": "SafeSurfers Dashboard"
    },
    
    // --- THE BRAIN (Background Service Worker) ---
    "background": {
        "service_worker": "background.js"
    },

    // --- CRITICAL PERMISSIONS FOR T2'S MONITORING ---
    "permissions": [
        "storage",             
        "scripting",           
        "tabs",                
        "webRequest",          
        "webNavigation",       
        "management",          
        "alarms"               
    ],
    
    // --- HOST ACCESS (Required for monitoring all network traffic) ---
    "host_permissions": [
        "<all_urls>"
    ],

    // --- WEB REQUEST DECLARATIONS (Required for T2's network analysis) ---
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}