{
  "manifest_version": 3,
  "name": "SafeSurfers",
  "version": "1.0",
  "description": "Detects suspicious URLs and injected scripts for demo.",
  "permissions": [
    "storage",
    "scripting",
    "webRequest",
    "tabs",
    "management"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "SafeSurfers"
  }
}
