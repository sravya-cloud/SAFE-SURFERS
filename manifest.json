{
  "manifest_version": 3,
  "name": "SafeSurfers",
  "version": "1.0",
  "description": "Detect and analyze suspicious websites, URLs, and scripts in real-time.",
  "permissions": ["storage", "scripting", "tabs", "webRequest", "webRequestBlocking", "<all_urls>"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/default.ts"]
    }
  ],
  "action": {
    "default_title": "SafeSurfers"
  }
}
